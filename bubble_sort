#include <stdio.h>

int main()
{
    int A[]={11,9,29,8};
    int i;
    bubble_sort(A,4);
    for(i=0;i<=3;i++)
    printf("/n%d",A[i]);
    getch();
}
void bubble_sort(int A[],int N)
{
  
    int round,i,temp, flag;
        
    for(round=1;round<=N-1;round++)
    {
        flag=0;
    for(i=0;i<=N-1-round;i++)
    if(A[i]> A[i+1])
    {
        flag=1;
        temp=A[i];
        A[i]=A[i+1];
        A[i+1]=temp;
    }
    if(flag==0)
    {
        printf("Round=%d/n",round);
    return;
}
}
}
        
    

